	<script type="text/javascript">
	var flag = true;
	$(document).ready(function(){
		console.log(1)
		$('#confirm').click(function(){
			if(flag != true) {
				console.log(flag);
				return;
			}
			flag = false;
			var name = $('#name').val(),
				grade = $('#grade').val(),
				college = $('#college').val(),
				major = $('#major').val(),
				company = $('#company').val(),
				job = $('#job').val(),
				phone = $('#phone').val(),
				weixin = $('#weixin').val(),
				qq = $('#qq').val(),
				city = $('#city').val(),
				district = $('#district').val(),
				address = $('#address').val();


			if(!name) {
				alert('名字不能为空');
				flag = true;
				return ;
			} else if(!grade || grade == '请选择') {
				alert('入学年份未选择');
				flag = true;
				return ;
			} else if(!college || college == '请选择') {
				alert('学院未选择');
				flag = true;
				return ;
			} else if(!job) {
				alert('职业未填写');
				flag = true;
				return ;
			} else if(!phone || isNaN(phone)) {
				alert('联系方式填写有误，请输出数字');
				flag = true;
				return ;
			} else if(qq && isNaN(qq)) {
				alert('qq号请填写数字');
				flag = true;
				return ;
			} else if(!district || district == '请选择') {
				alert('所在区未选择');
				flag = true;
				return ;
			}

			$.ajax({
				url:'/message',
				type:'post',
				data:{
					name:name,
					grade:parseInt(grade),
					college:college,
					major:major,
					company:company,
					job:job,
					phone:parseInt(phone),
					weixin:weixin,
					qq:parseInt(qq),
					city:city,
					district:district,
					address:address
				},
				dataType:'json'
			})
			.done(function(msg){
				if(msg.code == 1) {
					alert('感谢您的配合和大力支持，希望北京校友会有您的加入会变得更加精彩');
				} else {
					alert('数据发送失败，请重新点击确认按钮');
					flag = true;
				}
			})
			.fail(function(msg){
				alert('数据发送失败，请重新点击确认按钮');
				flag = true;
			})
		})
	})

	</script>
