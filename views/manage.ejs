    <script type="text/javascript">
    $(document).ready(function(){
    	$.ajax({
			url:'/user_manage',
			type:'get',
			dataType:'json'
		})
		.done(function(msg){
			if(msg.code == 1) {
				data = msg.data;
				if(!data.length) return;
				var tr = '';
				var n = 0;
				for(var i = 0 ; i < data.length; i++) {
					var td = '';
					for(var j in data[i]) {
						if(j == 'club') continue;
						if(j == 'id') {
							td += '<td>' + ++n + '</td>';
						} else {
							td += '<td>' + data[i][j] + '</td>';
						}

					}
					tr += '<tr>' + td + '</tr>';
				}
				$('.tbody').html(tr);
				$('.datatable').dataTable( {
        				"oLanguage": {
							"sUrl": "zh_CN.json"
						}
					});

			}
		})
    })


